
<div class='carddetailPage'>
  <div class="container">
    <div class="cardContents">
      <div class="cardContents_title">
        <div>タイトル</div>
        <h2><%= @patience.name %></h2>
      </div>
      <div class="cardContents_memo">
        <div>メモ</div>
        <div><%= @patience.price %></div>
      </div>
      <div class="cardContents_listStatus">
        <div>リスト名</div>
        <div><%= @patience.target.title %></div>
      </div>
      <div class="cardContents_btnArea">
        <%= link_to '編集する', edit_target_patience_path(@patience.target, @patience), class: "edit_btn" %>
      </div>
      <div class="cardContents_btnArea">
        <%= link_to '削除する', target_patience_path(@patience.target, @patience), method: :delete, class: "delete_btn" %>
      </div>
    </div>
  </div>
</div>
