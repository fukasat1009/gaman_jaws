<div class="container">
  <div class="row">
  	<div class="col-4">
  	</div>
  	<div class="col-4">
  	<%= form_with model: @patience, url: { action: :create },  local: true do |f| %>
  	<%= f.hidden_field :target_id, value: @target.id %>
  	  <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true,  placeholder: "我慢名",class: "input form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, autofocus: true,  placeholder: "我慢の金額",class: "input form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "作成",class: "btn btn-outline-dark",style: "width:300px" %>
      </div>
    <% end %>
    </div>
    <div class="col-4">
  	</div>
  </div>
</div>

