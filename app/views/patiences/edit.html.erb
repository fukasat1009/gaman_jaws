<div class="container">
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4">
    <%= form_with model: @patience, url: { action: :update }, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true,  placeholder: "我慢名",class: "input form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, autofocus: true,  placeholder: "我慢する金額",class: "input form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "編集",class: "btn btn-outline-dark",style: "width:300px" %>
      </div>
    <% end %>
    </div>
    <div class="col-4"></div>
  </div>
</div>
