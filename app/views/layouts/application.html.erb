<!DOCTYPE html>
<html>
  <head>
    <title>GamanJaws</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class="nav">
        <ul class="header_menu">
          <% if user_signed_in? %>
          <li class="nav-link"><%= current_user.name %>さん</li>
          <li>
            <ul class="header_menu_inner">
              <li><%= link_to "TOP", root_path, class: "nav-link" %></li>
              <li><%= link_to "カレンダー", target_calendar_path %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            </ul>
          </li>
          <% end %>
          <li class="header_menu_title"><%= link_to "Gaman_Jaws", root_path, class: "nav-link" %></li>
        </ul>
      </nav>
    </header>


    <%= yield %>
  </body>
</html>
