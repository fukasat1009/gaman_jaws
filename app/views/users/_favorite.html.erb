<% if target.favorited_by?(current_user) %>

        <%= link_to target_favorites_path(target), method: :delete, remote: true do %>
        <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
        <%= target.favorites.count %> いいね
    <% end %>

    <% else %>

        <%= link_to target_favorites_path(target), method: :post, remote: true do %>
          <i class="fa fa-heart-o" aria-hidden="true"></i>
          <%= target.favorites.count %> いいね
        <% end %>

    <% end %>